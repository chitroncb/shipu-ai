const axios = require("axios");
const fs = require("fs-extra");
const path = require("path");

module.exports = {
  config: {
    name: "gen18",
    version: "1.0",
   
    countDown: 5,
    role: 0,
    shortDescription: { en: "Generate NSFW images using ai prompt" },
    longDescription: { en: "Generates NSFW images using ai prompt" },
    category: "nsfw",
    guide: { en: "{p}hgen [prompt]" }
  },

  onStart: async function ({ api, event, args, message }) {
    const prompt = args.join(" ");
    if (!prompt) return message.reply("‚ùå Please provide a text prompt to gen the nude image.");

    const imgPath = path.join(__dirname, "cache", `${Date.now()}_hgen.jpg`);
    const wait = await message.reply(`üîû Generating nude image for: "${prompt}"...\nPlease wait...`);

    try {
      const res = await axios.get(`https://hgen.onrender.com/rl?prompt=${encodeURIComponent(prompt)}`, {
        responseType: "arraybuffer"
      });

      await fs.ensureDir(path.dirname(imgPath));
      await fs.writeFile(imgPath, Buffer.from(res.data, "binary"));

      await message.reply({
        body: `‚úÖ Your dirry image generated here:`,
        attachment: fs.createReadStream(imgPath)
      });

    } catch (err) {
      console.error("HGEN Error:", err);
      message.reply("‚ùå Failed to generate this image. Try again later or use a different prompt.");
    } finally {
      await fs.remove(imgPath);
      api.unsendMessage(wait.messageID);
    }
  }
};